<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madcomp19gmail.bouncyball">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TrailShop"></activity>
        <activity android:name=".SettingsMenu"></activity>
        <activity android:name=".AchievementsMenu" />
        <activity
            android:name=".SkinShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DoublePointsAlert"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.DoublePointsAlert" />
        <activity
            android:name=".ShopMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DailyChallenge"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameWorld"
            android:screenOrientation="portrait" />
    </application>

</manifest>