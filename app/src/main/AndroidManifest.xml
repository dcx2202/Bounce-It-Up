<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madcomp19gmail.bouncyball">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BackgroundShop"></activity>
        <activity android:name=".BallShop"></activity>
        <activity
            android:name=".BoostShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SoundShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TrailShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AchievementsMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SkinShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShopMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DailyChallenge"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameWorld"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5557351606937995~8015272303" />
    </application>

</manifest>